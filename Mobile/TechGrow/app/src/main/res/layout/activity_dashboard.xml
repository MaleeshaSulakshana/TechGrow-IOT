<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:background="@color/neon14"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/todayDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:textColor="@color/dark_blue0"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textSize="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Green house"
                android:textColor="@color/dark_blue0"
                android:textStyle="normal"
                android:fontFamily="serif"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/btnTurnOnCard"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:neumorph_backgroundColor="@color/neon12"
                    app:neumorph_shapeType="flat"
                    app:neumorph_lightSource="leftTop"
                    app:neumorph_shadowColorLight="@color/neon15"
                    app:neumorph_shadowColorDark="@color/neon16"
                    app:neumorph_shapeAppearance="@style/CustomButtonCircleShapeAppearance">

                    <ImageView
                        android:id="@+id/btnTurnOnCardIcon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_power_settings"
                        app:tint="@color/neon1" />

                </soup.neumorphism.NeumorphCardView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Soil Moisture"
                    android:textColor="@color/dark_blue0"
                    android:textStyle="normal"
                    android:fontFamily="serif"
                    android:textSize="14dp"/>

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/btnSoilMoistureCard"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:neumorph_backgroundColor="@color/neon1"
                    app:neumorph_shapeType="flat"
                    app:neumorph_lightSource="leftTop"
                    app:neumorph_shadowColorLight="@color/neon15"
                    app:neumorph_shadowColorDark="@color/neon16"
                    app:neumorph_shapeAppearance="@style/CustomButtonShapeAppearance">

                    <ImageView
                        android:id="@+id/btnSoilMoistureCardIcon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_water_drop"
                        app:tint="@color/dark_blue0" />

                </soup.neumorphism.NeumorphCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Humidity"
                    android:textColor="@color/dark_blue0"
                    android:textStyle="normal"
                    android:fontFamily="serif"
                    android:textSize="14dp"/>

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/btnHumidityCard"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:neumorph_backgroundColor="@color/neon1"
                    app:neumorph_shapeType="flat"
                    app:neumorph_lightSource="leftTop"
                    app:neumorph_shadowColorLight="@color/neon15"
                    app:neumorph_shadowColorDark="@color/neon16"
                    app:neumorph_shapeAppearance="@style/CustomButtonShapeAppearance">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/btnHumidityCardIcon1"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_water_drop"
                            app:tint="@color/dark_blue0" />

                        <ImageView
                            android:id="@+id/btnHumidityCardIcon2"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ic_water_drop"
                            app:tint="@color/dark_blue0" />

                    </RelativeLayout>

                </soup.neumorphism.NeumorphCardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Temperature"
                    android:textColor="@color/dark_blue0"
                    android:textStyle="normal"
                    android:fontFamily="serif"
                    android:textSize="14dp"/>

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/btnTemperatureCard"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:neumorph_backgroundColor="@color/neon1"
                    app:neumorph_shapeType="flat"
                    app:neumorph_lightSource="leftTop"
                    app:neumorph_shadowColorLight="@color/neon15"
                    app:neumorph_shadowColorDark="@color/neon16"
                    app:neumorph_shapeAppearance="@style/CustomButtonShapeAppearance">

                    <ImageView
                        android:id="@+id/btnTemperatureCardIcon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_thermostat"
                        app:tint="@color/dark_blue0" />

                </soup.neumorphism.NeumorphCardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_sunny"
                    app:tint="@color/yellow0"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_brightness"
                    android:rotation="160"
                    app:tint="@color/dark_gray1"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutDashboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">

                    <soup.neumorphism.NeumorphCardView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        app:neumorph_backgroundColor="@color/neon1"
                        app:neumorph_shapeType="flat"
                        app:neumorph_lightSource="leftTop"
                        app:neumorph_shadowColorLight="@color/neon15"
                        app:neumorph_shadowColorDark="@color/neon16"
                        app:neumorph_shapeAppearance="@style/CustomButtonShapeAppearance">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Soil Moisture"
                                android:textColor="@color/dark_blue0"
                                android:textStyle="normal"
                                android:fontFamily="serif"
                                android:textSize="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="1000"
                                android:textColor="@color/dark_blue0"
                                android:textStyle="bold"
                                android:fontFamily="serif"
                                android:textSize="30dp"/>

                        </LinearLayout>

                    </soup.neumorphism.NeumorphCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">

                    <soup.neumorphism.NeumorphCardView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        app:neumorph_backgroundColor="@color/neon1"
                        app:neumorph_shapeType="flat"
                        app:neumorph_lightSource="leftTop"
                        app:neumorph_shadowColorLight="@color/neon15"
                        app:neumorph_shadowColorDark="@color/neon16"
                        app:neumorph_shapeAppearance="@style/CustomButtonShapeAppearance">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Humidity"
                                android:textColor="@color/dark_blue0"
                                android:textStyle="normal"
                                android:fontFamily="serif"
                                android:textSize="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="1000"
                                android:textColor="@color/dark_blue0"
                                android:textStyle="bold"
                                android:fontFamily="serif"
                                android:textSize="30dp"/>

                        </LinearLayout>

                    </soup.neumorphism.NeumorphCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">

                    <soup.neumorphism.NeumorphCardView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        app:neumorph_backgroundColor="@color/neon1"
                        app:neumorph_shapeType="flat"
                        app:neumorph_lightSource="leftTop"
                        app:neumorph_shadowColorLight="@color/neon15"
                        app:neumorph_shadowColorDark="@color/neon16"
                        app:neumorph_shapeAppearance="@style/CustomButtonShapeAppearance">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Temperature"
                                android:textColor="@color/dark_blue0"
                                android:textStyle="normal"
                                android:fontFamily="serif"
                                android:textSize="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="1000"
                                android:textColor="@color/dark_blue0"
                                android:textStyle="bold"
                                android:fontFamily="serif"
                                android:textSize="30dp"/>

                        </LinearLayout>

                    </soup.neumorphism.NeumorphCardView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSoilMoisture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soil Moisture"
                            android:textColor="@color/dark_blue0"
                            android:textStyle="bold"
                            android:fontFamily="serif"
                            android:textSize="25dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <SeekBar
                                android:id="@+id/soilMoistureSeeker"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:progress="50"
                                android:maxHeight="7dp"
                                android:minHeight="7dp"
                                android:thumb="@drawable/ic_album"
                                android:thumbTint="@color/gray4"
                                android:progressDrawable="@drawable/seekbar_progress_color"
                                app:trackColorInactive="@color/gray5"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/txtSeekerSoilValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textColor="@color/dark_blue0"
                                    android:textStyle="normal"
                                    android:fontFamily="serif"
                                    android:textSize="25dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/dark_blue0"
                                    android:textStyle="normal"
                                    android:fontFamily="serif"
                                    android:textSize="25dp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="left">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Current Status :"
                                    android:textColor="@color/dark_blue0"
                                    android:textStyle="normal"
                                    android:fontFamily="serif"
                                    android:textSize="20dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="1750"
                                    android:textColor="@color/neon12"
                                    android:textStyle="bold"
                                    android:fontFamily="serif"
                                    android:textSize="25dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="vertical"
                                android:gravity="left">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Water Pump :"
                                    android:textColor="@color/dark_blue0"
                                    android:textStyle="normal"
                                    android:fontFamily="serif"
                                    android:textSize="20dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="Off"
                                    android:textColor="@color/neon12"
                                    android:textStyle="bold"
                                    android:fontFamily="serif"
                                    android:textSize="25dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="vertical"
                                android:gravity="left">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Last Water Pumped :"
                                    android:textColor="@color/dark_blue0"
                                    android:textStyle="normal"
                                    android:fontFamily="serif"
                                    android:textSize="20dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="2022-12-07 11:50"
                                    android:textColor="@color/dark_gray1"
                                    android:textStyle="bold"
                                    android:fontFamily="serif"
                                    android:textSize="22dp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutHumidity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humidity"
                            android:textColor="@color/dark_blue0"
                            android:textStyle="bold"
                            android:fontFamily="serif"
                            android:textSize="25dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <SeekBar
                                android:id="@+id/humiditySeeker"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:progress="50"
                                android:maxHeight="7dp"
                                android:minHeight="7dp"
                                android:thumb="@drawable/ic_album"
                                android:thumbTint="@color/gray4"
                                android:progressDrawable="@drawable/seekbar_progress_color"
                                app:trackColorInactive="@color/gray5"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/txtSeekerHumidityValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textColor="@color/dark_blue0"
                                    android:textStyle="normal"
                                    android:fontFamily="serif"
                                    android:textSize="25dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/dark_blue0"
                                    android:textStyle="normal"
                                    android:fontFamily="serif"
                                    android:textSize="25dp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="left">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Current Status :"
                                    android:textColor="@color/dark_blue0"
                                    android:textStyle="normal"
                                    android:fontFamily="serif"
                                    android:textSize="20dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="1750"
                                    android:textColor="@color/neon12"
                                    android:textStyle="bold"
                                    android:fontFamily="serif"
                                    android:textSize="25dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="vertical"
                                android:gravity="left">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Water Pump :"
                                    android:textColor="@color/dark_blue0"
                                    android:textStyle="normal"
                                    android:fontFamily="serif"
                                    android:textSize="20dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="Off"
                                    android:textColor="@color/neon12"
                                    android:textStyle="bold"
                                    android:fontFamily="serif"
                                    android:textSize="25dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="vertical"
                                android:gravity="left">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Last Water Pumped :"
                                    android:textColor="@color/dark_blue0"
                                    android:textStyle="normal"
                                    android:fontFamily="serif"
                                    android:textSize="20dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="2022-12-07 11:50"
                                    android:textColor="@color/dark_gray1"
                                    android:textStyle="bold"
                                    android:fontFamily="serif"
                                    android:textSize="22dp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutTemperature"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temperature"
                            android:textColor="@color/dark_blue0"
                            android:textStyle="bold"
                            android:fontFamily="serif"
                            android:textSize="25dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <SeekBar
                                android:id="@+id/whetherSeeker"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:progress="50"
                                android:maxHeight="7dp"
                                android:minHeight="7dp"
                                android:thumb="@drawable/ic_album"
